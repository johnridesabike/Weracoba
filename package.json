{
	"name": "weracoba",
	"version": "0.1.0",
	"description": "Weracoba WordPress theme",
	"homepage": "https://johnridesa.bike/tag/weracoba/",
	"devDependencies": {
		"@wordpress/browserslist-config": "^2.2.2",
		"autoprefixer": "^9.4.7",
		"browserslist": "4.4.1",
		"chokidar-cli": "^1.2.2",
		"eslint": "^5.12.1",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-plugin-wordpress": "^0.1.0",
		"node-sass": "^4.11.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.1",
		"postcss-focus-within": "^3.0.0",
		"rtlcss": "^2.4.0",
		"stylelint": "^9.5.0",
		"stylelint-config-wordpress": "^13.1.0",
		"stylelint-order": "^0.8.1",
		"prettier": "^1.12.1",
		"prettier-eslint": "^8.8.1",
		"prettier-stylelint": "^0.4.2"
	},
	"rtlcssConfig": {
		"options": {
			"autoRename": false,
			"autoRenameStrict": false,
			"blacklist": {},
			"clean": true,
			"greedy": false,
			"processUrls": false,
			"stringMap": []
		},
		"plugins": [],
		"map": false
	},
	"eslintConfig": {
		"extends": "wordpress"
	},
	"eslintStyle": {
		"extends": [
			"wordpress",
			"stylelint-config-wordpress/scss"
		]
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"scripts": {
		"build:style": "node-sass style.scss style.css --source-map style.css.map --source-map-embed false --output-style expanded && postcss -r style.css",
		"build:style-editor": "node-sass style-editor.scss style-editor.css --source-map style-editor.css.map --source-map-embed false  --output-style expanded && postcss -r style-editor.css",
		"build:print": "node-sass style-print.scss style-print.css --source-map style-print.css.map --source-map-embed false  --output-style expanded && postcss -r style-print.css",
		"build": "run-p \"build:*\"",
		"watch": "chokidar \"**/*.scss\" -c \"npm run build\" --initial"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/johnridesabike/Weracoba.git"
	},
	"author": "John",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/johnridesabike/Weracoba/issues"
	}
}
